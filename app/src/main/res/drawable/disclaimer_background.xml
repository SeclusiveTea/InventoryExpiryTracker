<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="3dp"
        android:top="3dp">
        <shape>
            <solid android:color="#40000000" /> <!-- Shadow color -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Shape -->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Shape color -->
            <stroke
                android:width="2dp"
                android:color="#33E6E6E6" /> <!-- Stroke color -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" /> <!-- Shadow color (adjust alpha as needed) -->
            <corners android:radius="20dp" /> <!-- Corner radius (adjust as needed) -->
        </shape>
    </item>
    <!-- Button background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#3E81C6" /> <!-- Button color (adjust as needed) -->
            <corners android:radius="100dp" /> <!-- Corner radius (adjust as needed) -->
        </shape>
    </item>
</layer-list>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:bottom="0dp"
        android:left="3dp"
        android:right="0dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Shadow color (adjust alpha as needed) -->
            <corners android:radius="6dp" /> <!-- Corner radius (adjust as needed) -->
        </shape>
    </item>
    <!-- Button background -->
    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="2dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#33E6E6E6" />
            <solid android:color="#FFFFFF" /> <!-- Button color (adjust as needed) -->
            <corners android:radius="5dp" /> <!-- Corner radius (adjust as needed) -->
        </shape>
    </item>
</layer-list>
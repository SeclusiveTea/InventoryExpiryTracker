<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="20dp" />
            <size
                android:width="10dp"
                android:height="100dp" />
        </shape>
    </item>
    <!-- Shape -->
    <item
        android:bottom="7dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#3E81C6" />
            <corners android:radius="20dp" />
            <size
                android:width="10dp"
                android:height="100dp" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Stored Items: "
        app:layout_constraintBottom_toBottomOf="@+id/btn_location1"
        app:layout_constraintEnd_toEndOf="@+id/btn_location1"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/btn_location1"
        app:layout_constraintTop_toTopOf="@+id/btn_location1"
        app:layout_constraintVertical_bias="0.79" />

    <android.widget.Button
        android:id="@+id/btn_location1"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/home_button"
        android:gravity="start|top"
        android:textSize="20sp"
        android:paddingStart="16dp"
        android:paddingTop="15dp"
        android:text="Location 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Stored Items: "
        app:layout_constraintBottom_toBottomOf="@+id/btn_location2"
        app:layout_constraintEnd_toEndOf="@+id/btn_location2"
        app:layout_constraintStart_toStartOf="@+id/btn_location2"
        app:layout_constraintTop_toTopOf="@+id/btn_location2"
        app:layout_constraintVertical_bias="0.79"
        app:layout_constraintHorizontal_bias="0.086"/>

    <android.widget.Button
        android:id="@+id/btn_location2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/home_button"
        android:gravity="start|top"
        android:paddingStart="16dp"
        android:paddingTop="15dp"
        android:text="Location 2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_location1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Stored Items:"
        app:layout_constraintBottom_toBottomOf="@+id/btn_location3"
        app:layout_constraintEnd_toEndOf="@+id/btn_location3"
        app:layout_constraintStart_toStartOf="@+id/btn_location3"
        app:layout_constraintTop_toTopOf="@+id/btn_location3"
        app:layout_constraintVertical_bias="0.79"
        app:layout_constraintHorizontal_bias="0.086"/>

    <android.widget.Button
        android:id="@+id/btn_location3"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/home_button"
        android:gravity="start|top"
        android:paddingStart="16dp"
        android:paddingTop="15dp"
        android:text="Location 3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_location2" />


</androidx.constraintlayout.widget.ConstraintLayout>